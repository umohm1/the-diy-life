<div class="row">

<%= form_for @project, html: { multipart: true } do |f| %>
<%= render 'errors/error_messages' %>

<div class="form-group">
   <label for="project_name" class="col-sm-2 control-label">Name</label>
   <div class="col-sm-10">
     <%= f.text_field :name, class: "form-control" %><br />
   </div>
 </div>


 <div class="form-group">
   <label for="project_materials" class="col-sm-2 control-label">Materials</label>
   <div class="col-sm-10">
     <%= f.text_field :materials, class: "form-control" %><br />
   </div>
 </div>


 <div class="form-group">
   <label for="project_length" class="col-sm-2 control-label">Length</label>
   <div class="col-sm-10">
     <%= f.text_field :length, class: "form-control" %><br />
   </div>
 </div>


 <div class="form-group">
    <label for="project_tag_id" class="col-sm-2 control-label">Tag</label>
    <div class="col-sm-10 ">
    <div class="scroll form-control">
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
</div>

<%= f.fields_for :tags, @project.tags.build do |tags_fields| %>
  <%= tags_fields.text_field :name, placeholder: "Or Create a New Tag!", class: "form-control" %><br />
  <% end %>
  </div>
</div>

<div class="form-group">
  <label for="pin_image" class="col-sm-2 control-label">Image</label>
  <div class="col-sm-10">
  <%= f.file_field :image, class: "form-control" %><br />
  </div>
</div>



 <div class="form-group">
  <div class="col-sm-2">
  </div>
    <div class="col-sm-10">
      <%= f.button(options = {class: "btn btn-default form-control"}) %>
    </div>
</div>
<% end %>
</div>
